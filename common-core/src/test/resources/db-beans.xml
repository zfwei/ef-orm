		<property name="dataSource" ref="postgresqlSource" />
		<!--<property name="dataSource" ref="sqlserverSource" />-->
				
		<property name="mappingLocations">
			<list>
				<value>classpath:/com/hikvision/cms/webservice/bo/*.hbm.xml</value>
